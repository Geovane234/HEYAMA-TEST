{
    "compilerOptions": {
        "module": "CommonJS",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "target": "ES2021",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "rootDir": "src",
        "incremental": true,
        "skipLibCheck": true,
        "strict": false,
        "noEmit": false,
        "paths": {
            "@repo/shared": [
                "../../packages/shared/dist/index"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test",
        "**/*.spec.ts"
    ]
}